<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StormPC.Views.Dashboard.CustomerReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vm="using:StormPC.ViewModels.Dashboard"
    xmlns:helpers="using:StormPC.Helpers"
    xmlns:coreHelpers="using:StormPC.Core.Helpers"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml"
    mc:Ignorable="d"
    Loaded="CustomerReportPage_Loaded">

    <Page.Resources>
        <helpers:NumberFormatConverter x:Key="NumberFormatConverter"/>
        <helpers:CurrencyConverter x:Key="CurrencyConverter"/>
        <helpers:DateTimeConverter x:Key="DateTimeConverter"/>
        <Style x:Key="CardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefault}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Báo cáo khách hàng" 
                     Style="{ThemeResource TitleTextBlockStyle}" 
                     VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      Spacing="8">
                <CalendarDatePicker Header="Từ ngày"
                                  Date="{x:Bind ViewModel.StartDate, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}"/>
                <CalendarDatePicker Header="Đến ngày"
                                  Date="{x:Bind ViewModel.EndDate, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}"/>
                <Button Command="{x:Bind ViewModel.RefreshCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;"/>
                        <TextBlock Text="Làm mới"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- KPI Cards -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Style="{StaticResource CardStyle}" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Tổng số khách hàng" 
                             Style="{ThemeResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SegmentationData.TotalCustomers, Mode=OneWay}" 
                             Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource CardStyle}" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Khách hàng Platinum" 
                             Style="{ThemeResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SegmentationData.PlatinumCustomers, Mode=OneWay}" 
                             Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource CardStyle}" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Khách hàng Gold" 
                             Style="{ThemeResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SegmentationData.GoldCustomers, Mode=OneWay}" 
                             Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource CardStyle}" Grid.Column="3">
                <StackPanel>
                    <TextBlock Text="Khách hàng Silver" 
                             Style="{ThemeResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SegmentationData.SilverCustomers, Mode=OneWay}" 
                             Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource CardStyle}" Grid.Column="4">
                <StackPanel>
                    <TextBlock Text="Khách hàng Bronze" 
                             Style="{ThemeResource CaptionTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.SegmentationData.BronzeCustomers, Mode=OneWay}" 
                             Style="{ThemeResource TitleLargeTextBlockStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Charts -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Purchase Trends Chart -->
            <Grid Style="{StaticResource CardStyle}" Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Xu hướng mua hàng" 
                         Style="{ThemeResource SubtitleTextBlockStyle}"
                         Margin="0,0,0,8"/>
                <lvc:CartesianChart Grid.Row="1"
                                  Series="{x:Bind ViewModel.PurchaseTrendsSeries, Mode=OneWay}"/>
            </Grid>

            <!-- Customer Segmentation Chart -->
            <Grid Style="{StaticResource CardStyle}" Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Phân khúc khách hàng" 
                         Style="{ThemeResource SubtitleTextBlockStyle}"
                         Margin="0,0,0,8"/>
                <lvc:PieChart Grid.Row="1"
                            Series="{x:Bind ViewModel.CustomerSegmentationSeries, Mode=OneWay}"/>
            </Grid>

            <!-- Customer Preferences Chart -->
            <Grid Style="{StaticResource CardStyle}" Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Thương hiệu ưa thích" 
                         Style="{ThemeResource SubtitleTextBlockStyle}"
                         Margin="0,0,0,8"/>
                <lvc:CartesianChart Grid.Row="1"
                                  Series="{x:Bind ViewModel.CustomerPreferenceSeries, Mode=OneWay}"/>
            </Grid>

            <!-- Top Customers -->
            <Grid Style="{StaticResource CardStyle}" Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Top khách hàng" 
                         Style="{ThemeResource SubtitleTextBlockStyle}"
                         Margin="0,0,0,8"/>
                <ListView Grid.Row="1"
                         ItemsSource="{x:Bind ViewModel.TopCustomers, Mode=OneWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding CustomerName}" 
                                             Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock>
                                        <Run Text="{Binding TotalOrders}"/>
                                        <Run Text=" đơn hàng - "/>
                                        <Run Text="{Binding TotalSpent, Converter={StaticResource CurrencyConverter}}"/>
                                        <Run Text=" đ"/>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Grid.Column="1" 
                                         VerticalAlignment="Center">
                                    <Run Text="{Binding AverageOrderValue, Converter={StaticResource CurrencyConverter}}"/>
                                    <Run Text=" đ/đơn"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="{ThemeResource SystemControlAcrylicElementBrush}"
              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="50" 
                         Height="50"/>
        </Grid>
    </Grid>
</Page> 