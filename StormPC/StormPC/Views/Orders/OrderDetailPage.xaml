<Page
    x:Class="StormPC.Views.Orders.OrderDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:StormPC.Core.Models.Orders.Dtos"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side info -->
            <StackPanel>
                <TextBlock Text="Order ID" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                <TextBlock Text="{x:Bind ViewModel.OrderDetail.OrderID, Mode=OneWay}" 
                         Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,4,0,12"/>

                <TextBlock Text="Status" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,12">
                    <Ellipse Width="12" Height="12">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{x:Bind ViewModel.OrderDetail.StatusColor, Mode=OneWay}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{x:Bind ViewModel.OrderDetail.StatusName, Mode=OneWay}" 
                             Style="{ThemeResource BodyTextBlockStyle}"/>
                </StackPanel>

                <TextBlock Text="Order Date" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                <TextBlock Text="{x:Bind ViewModel.OrderDetail.FormattedOrderDate, Mode=OneWay}" 
                         Style="{ThemeResource BodyTextBlockStyle}"/>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE70F;"/>
                        <TextBlock Text="Edit"/>
                    </StackPanel>
                </Button>
                <Button Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;"/>
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Customer Info -->
            <StackPanel>
                <TextBlock Text="Customer Information" 
                         Style="{ThemeResource SubtitleTextBlockStyle}" 
                         Margin="0,0,0,16"/>

                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      Padding="16" CornerRadius="8"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Customer" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                        <TextBlock Text="{x:Bind ViewModel.OrderDetail.CustomerName, Mode=OneWay}"
                                 Style="{ThemeResource BodyTextBlockStyle}" Margin="0,4,0,12"/>

                        <TextBlock Text="Ship Address" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                        <TextBlock Text="{x:Bind ViewModel.OrderDetail.ShippingAddress, Mode=OneWay}"
                                 Style="{ThemeResource BodyTextBlockStyle}" 
                                 TextWrapping="Wrap" Margin="0,4,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="City" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.OrderDetail.ShippingCity, Mode=OneWay}"
                                         Style="{ThemeResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Payment Method" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6"/>
                                <TextBlock Text="{x:Bind ViewModel.OrderDetail.PaymentMethod, Mode=OneWay}"
                                         Style="{ThemeResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Right Panel - Order Items -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Order Items" 
                         Style="{ThemeResource SubtitleTextBlockStyle}" 
                         Margin="0,0,0,16"/>

                <ListView Grid.Row="1" 
                         ItemsSource="{x:Bind ViewModel.OrderDetail.Items, Mode=OneWay}"
                         Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                         BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                         BorderThickness="1"
                         CornerRadius="8">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="dto:OrderItemDto">
                            <Grid Padding="16" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{x:Bind VariantID}" 
                                             Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" 
                                         Text="{x:Bind FormattedUnitPrice}"
                                         Style="{ThemeResource BodyTextBlockStyle}"
                                         HorizontalAlignment="Right"/>

                                <TextBlock Grid.Column="2" 
                                         Text="{x:Bind Quantity}"
                                         Style="{ThemeResource BodyTextBlockStyle}"
                                         HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                         Text="{x:Bind FormattedSubtotal}"
                                         Style="{ThemeResource BodyStrongTextBlockStyle}"
                                         HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.Header>
                        <Grid Padding="16" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Product" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Grid.Column="1" Text="Unit Price" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                                     HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="Quantity" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Subtotal" 
                                     Style="{ThemeResource BodyStrongTextBlockStyle}"
                                     HorizontalAlignment="Right"/>
                        </Grid>
                    </ListView.Header>
                </ListView>

                <!-- Total -->
                <Grid Grid.Row="2" Margin="0,16,0,0"
                      Padding="16"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Total" 
                             Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    <TextBlock Grid.Column="1" 
                             Text="{x:Bind ViewModel.OrderDetail.FormattedTotalAmount, Mode=OneWay}"
                             Style="{ThemeResource SubtitleTextBlockStyle}"
                             Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                </Grid>
            </Grid>
        </Grid>

        <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                     Width="50" Height="50"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Grid.RowSpan="2"/>
    </Grid>
</Page> 