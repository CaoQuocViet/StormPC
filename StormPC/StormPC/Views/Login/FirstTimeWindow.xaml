<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="StormPC.Views.Login.FirstTimeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="650"
                Height="640"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Translation="0,0,32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Infographic Image -->
                <Border Grid.Column="0" 
                        Background="#0078D4"
                        CornerRadius="8,0,0,8">
                    <Image Source="/Assets/img/logo/StormPC_Infographic.png"
                           Height="640"
                           Width="250"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- First Time Setup Form -->
                <Grid Grid.Column="1" Margin="32,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo -->
                    <Image Grid.Row="0" 
                           Source="/Assets/img/logo/logo-512x512.png"
                           Width="120" 
                           Height="120"
                           Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Welcome to StormPC"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Create Admin Account"
                                 FontSize="16"
                                 Margin="0,10,0,0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,20">
                        <TextBlock Text="Username" Margin="0,0,0,5"/>
                        <winui:TextBox x:Name="UsernameTextBox" 
                                 Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                                 Margin="0,0,0,15"
                                 Padding="8"/>

                        <TextBlock Text="Password" Margin="0,0,0,5"/>
                        <winui:PasswordBox x:Name="PasswordBox"
                                    Margin="0,0,0,15"
                                    Padding="8"/>

                        <TextBlock Text="Confirm Password" Margin="0,0,0,5"/>
                        <winui:PasswordBox x:Name="ConfirmPasswordBox"
                                    Margin="0,0,0,15"
                                    Padding="8"/>

                        <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                                  Foreground="Red"
                                  TextWrapping="Wrap"
                                  Margin="0,10"/>
                    </StackPanel>

                    <Button Grid.Row="3"
                            Content="Create Admin Account"
                            Style="{StaticResource AccentButtonStyle}" 
                            HorizontalAlignment="Center"
                            Width="250"
                            Height="36"
                            CornerRadius="4"
                            Click="OnCreateAdminClick"/>
                            
                    <TextBlock Grid.Row="4"
                              Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}"
                              HorizontalAlignment="Center"
                              Margin="0,8,0,8"
                              Opacity="0.7"
                              FontSize="12"/>
                </Grid>
            </Grid>
        </Border>

        <winui:ContentDialog x:Name="BackupKeyDialog"
                          Title="Backup Key"
                          PrimaryButtonText="Copy"
                          SecondaryButtonText="Close"
                          DefaultButton="Primary"
                          IsPrimaryButtonEnabled="True"
                          IsSecondaryButtonEnabled="True"
                          PrimaryButtonClick="OnCopyBackupKey"
                          SecondaryButtonClick="OnCloseBackupKeyDialog">
            <StackPanel>
                <TextBlock Text="Vui lòng lưu lại backup key cẩn thận. Bạn sẽ cần dùng nó để khôi phục tài khoản khi quên thông tin đăng nhập."
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"/>
                <TextBox Text="{x:Bind ViewModel.BackupKey, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Height="100"/>
            </StackPanel>
        </winui:ContentDialog>
    </Grid>
</Window>